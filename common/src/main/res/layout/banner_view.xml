<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.arch.demo.common.views.banner.BanerViewModel" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#ebf0f5"
        app:delay_time="4000"
        app:indicator_drawable_selected="@drawable/banner_indicator_selected"
        app:indicator_drawable_unselected="@drawable/banner_indicator_unselected"
        app:indicator_height="8dp"
        app:indicator_margin="5dp"
        app:indicator_width="8dp" />
</LinearLayout>
</layout>